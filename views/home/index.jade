extends ../layout

block content
  //- pre #{JSON.stringify(transactions, null, 2)}

  .row-fluid
    .span4
      ul.nav.nav-tabs.nav-stacked#nav
        each account in accounts
          li
            a(href="#") #{account.name}
              span #{account.balance_pretty}
              i.icon-chevron-right
        li.active
          a(href="#") All Accounts
            span #{total}
            i.icon-chevron-right

      div.last-updated
        | Last updated #{lastUpdated}
        a.btn.btn-primary#update-accounts-button
          i.icon-refresh.icon-white

    .span8
      div#search-wrapper
        input.search-query.pull-right(type="text", placeholder="Search Transactions...")
        .clearfix

      table.table.table-striped.transactions-table
        thead
          tr
            th(width="20%") Account
            th(width="40%") Name
            th(width="20%") Amount
            th(width="20%") Date

        tbody#transactions-tbody
          | <script>$(function(){ new Cilantro.App(!{transactions}) });</script>
