@import 'nib'

a
  cursor pointer

.big-form
  padding 30px 0 10px

  input
    display block

  input, button
    width 100%
    box-sizing border-box
    height 40px
    font-size 24px
    line-height 26px

.flip-container
  perspective 1000


.flip-container.flipped .flipper
  transform rotateY(180deg)


.flipper
  transition 0.6s
  transform-style preserve-3d
  position relative


.front, .back
  backface-visibility hidden
  position absolute
  top 0
  left 0


.front
  z-index 2

.back
  transform rotateY(180deg)
  border 1px solid #ddd
  border-radius(4px)
  padding 25px
  width 240px

.last-updated
  text-align center
  margin-bottom 10px

#update-accounts-form
  .update-accounts-passphrase
    width 140px
    display none

  .updating-text
    display none

  .error-text
    text-align center
    display none

  &.entering-passphrase
    .last-updated
      display none

    .update-accounts-passphrase
      display inline

  &.updating
    .last-updated
      display none

    .updating-text
      display inline

    button
      i
        animation(spin 1s linear infinite)

  &.error
    .error-text
      display block


#accounts-list
  margin-bottom 10px

  li
    &.active
      a
        background-color #ddd

        span
          color #444

        i.icon-chevron-right
          opacity(1.0)

    a
      padding 15px 30px 15px 15px
      position relative
      display table-cell
      width 245px

      span.account-name
        display inline-block
        width 145px
        vertical-align middle

      span.account-balance
        display inline-block
        color #aaa
        vertical-align middle
        width 70px
        text-align right

      i.icon-chevron-right
        position absolute
        top 50%
        margin-top -7px
        right 8px
        opacity(.25)

div.scraper
  position relative

  .action-links
    display none
    position absolute
    top 0
    right 0

    i
      opacity 0.5

      &:hover
        opacity 1

  &:hover
    .action-links
      display block

  .accounts-list
    min-height 30px

#search-wrapper
  padding-bottom 20px

.transactions-table
  td.amount
    min-width 80px

    &.positive
      color green

    &.negative
      color red

  td.name
    overflow ellipsis
    white-space nowrap
    width 400px
    max-width 400px

@keyframes spin
  from
    transform(rotate(0deg))

  to
    transform(rotate(360deg))